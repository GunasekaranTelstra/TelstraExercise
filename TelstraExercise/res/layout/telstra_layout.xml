<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tittle_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:minLines="0"
        android:textColor="#00bfff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/image_view_less"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/tittle_view"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/greater" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/tittle_view"
        android:layout_marginRight="30dp" />

    <TextView
        android:id="@+id/dec_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/image_view"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tittle_view"
        android:layout_marginRight="140dp"
        android:paddingLeft="5dp"
        android:maxLines="3"
        android:minLines="0"
        android:textSize="14sp" />

</RelativeLayout>